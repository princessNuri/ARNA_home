<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="12dp"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_product"
        android:layout_width="160dp"
        android:layout_height="240dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/pic1"
        android:scaleType="centerCrop"
        android:background="@drawable/corn"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/btn_add_to_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/iv_product"
        android:src="@drawable/ic_favotite"
        android:layout_margin="10dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/black_simple_lamp"
        android:fontFamily="@font/nunito_sans"
        android:textSize="14sp"
        android:textColor="@color/greyish"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_product"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tv_product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/_12_00"
        android:fontFamily="@font/nunito_sans"
        android:textSize="14sp"
        android:textColor="@color/grey_dark"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_product_name"
        android:layout_marginTop="6dp"/>

    <TextView
        android:id="@+id/tv_product_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/_4_5"
        android:fontFamily="@font/nunito_sans"
        android:textSize="14sp"
        android:textColor="@color/grey_dark"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_product_name"
        android:layout_marginTop="6dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/tv_product_rating"
        app:layout_constraintTop_toBottomOf="@id/tv_product_name"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="3dp"
        android:src="@drawable/ic_star"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>